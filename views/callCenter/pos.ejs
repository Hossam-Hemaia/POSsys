    <main>
      <section class="item-select">
        <div class="categories">
          <button type="button" class="cat-name_btn">أسماك</button>
          <button type="button" class="cat-name_btn">فواكه البحر</button>
          <button type="button" class="cat-name_btn">قشريات</button>
        </div>
        <div class="items">
          <div class="item-name_container">
            <div class="item-price">kw 15</div>
            <button type="button" class="item-btn">بلطى مقلى</button>
          </div>
          <div class="item-name_container">
            <div class="item-price">kw 15</div>
            <button type="button" class="item-btn">بلطى مقلى</button>
          </div>
          <div class="item-name_container">
            <div class="item-price">kw 15</div>
